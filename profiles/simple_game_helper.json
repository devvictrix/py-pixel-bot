{
    "profile_description": "Example helper for a simple hypothetical game.",
    "settings": {
        "monitoring_interval_seconds": 0.5 
    },
    "regions": [
        {
            "name": "health_bar_area",
            "x": 100, "y": 50, "width": 150, "height": 20,
            "comment": "Area representing a health bar. Expects reddish color for low health."
        },
        {
            "name": "action_icon_zone",
            "x": 300, "y": 200, "width": 100, "height": 100,
            "comment": "Zone where an action icon (template) might appear."
        }
    ],
    "templates": [
        {"name": "game_action_icon_def", "filename": "action_icon.png"}
    ],
    "rules": [
        {
            "name": "WarnOnLowHealth",
            "region": "health_bar_area",
            "condition": {
                "type": "average_color_is",
                "expected_bgr": [40, 40, 200], 
                "tolerance": 60 
            },
            "action": {
                "type": "log_message",
                "message": "WARNING: Health bar is reddish - low health detected!"
            }
        },
        {
            "name": "ClickActionIconWhenVisible",
            "region": "action_icon_zone",
            "condition": {
                "type": "template_match_found",
                "template_filename": "action_icon.png", 
                "min_confidence": 0.75
            },
            "action": {
                "type": "click",
                "target_relation": "center_of_last_match",
                "button": "left",
                "pyautogui_pause_before": 0.1
            }
        }
    ]
}